<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appTheme"
    tools:context=".TimetableActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="289dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/gen_button_all"
        android:onClick="mondayActivity"
        android:text="@string/monday"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="289dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="-9dp"
        android:background="@drawable/gen_button_all"
        android:onClick="wednesdayActivity"
        android:text="@string/wednesday"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="289dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/gen_button_all"
        android:onClick="thursdayActivity"
        android:text="@string/thursday"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button5"
        android:layout_width="289dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/gen_button_all"
        android:onClick="tuesdayActivity"
        android:text="@string/tuesday"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button6"
        android:layout_width="289dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="-16dp"
        android:background="@drawable/gen_button_all"
        android:onClick="fridayActivity"
        android:text="@string/friday"
        android:textSize="36sp"
        android:textStyle="bold" />
</RelativeLayout>
